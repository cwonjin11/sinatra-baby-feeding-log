
<h1>Baby's Feeding Details</h1>
<h2></h2>
<h2>Name: <%= @baby.name %> <br> Age: <%= @baby.age %> 
<a href="/babies/<%= @baby.id%>/edit">Edit baby</a>

<form action="/babies/<%= @baby.id %>/delete" method="POST">
  <input type="hidden" id="hidden" name="_method" value="DELETE"/>
  <input type="submit" value="Delete Baby">
</form>
</h2>



<ul>

<% if @schedules.size > 0 %>
<% @schedules.each do |scheme| %>
  <% if scheme.baby_id == @baby.id %>
    <b>* Start at :</b> <%= scheme.start_time %><br>
    <b>* End at :</b> <%= scheme.end_time %><br>
    <b>* Feeding Type :</b> <%= scheme.feeding_type %><br>
    <b>* Total amount :</b> <%= scheme.total_amount %> oz <br>
    <a href="/babies/<%=@baby.id%>/schedules/<%= scheme.id %>/update"> < Update Baby Logs > </a>
   <form action="/babies/<%=@baby.id%>/schedules/<%= scheme.id %>/delete" method="POST">
  <input type="hidden" id="hidden" name="_method" value="DELETE"/>
  <input type="submit" value="Delete">
</form>

   <br><br>
   <% end %>
  <% end %>
  <%else%>
    <p>No logs for this baby. <a href="/babies/<%=@baby.id%>/schedules/new"> < Add Baby Logs > </a>.</p>
 
<% end %>

<br>

<a href="/babies/<%= @baby.id %>/schedules/new"> < Add Baby Logs > </a>

<a href="/babies"> < View All babies > </a>


</ul>



