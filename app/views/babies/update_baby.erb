<h1> Update <%= @baby.name %>, <%=@baby.age%> yrs</h1>
 <br>

 <% if @errors %>
  <% @errors.each do |error| %>
    <p style="color: red;"><%= error %></p>
  <% end %>
<% end %>


<form action="/babies/<%= @baby.id %>" method="POST">
  <input type="hidden" id="hidden" name="_method" value="patch"/>
    <div>
    <label for="name">Name</label>
    <input type="string" name="name" id="name" value="<%= @baby.name %>"><br>
    <label for="age">Age</label>
    <input type="number" name="age" id="age" min="0" step="0" max="5"value="<%= @baby.age %>"><br>
    </div>

    <div>
    <label for="feeding_type">Feeding type</label>
    <input type="string" name="feeding_type" id="feeding_type" value="<%= @scheme.feeding_type %>"><br>
    </div>
 
    <div>
    <label for="start_time">Start time</label>
    <input type="datetime-local" name="start_time" id="start_time" value="<%= @scheme.start_time %>"><br>
    </div>
    
     <div>
    <label for="end_time">End time</label>
    <input type="datetime-local" name="end_time" id="end_time" value="<%= @scheme.end_time %>"><br>
    </div>

    <div>
    <label for="total_amount">Total amount</label>
    <input type="number" name="total_amount" id="total_amount" min="0.01" step="0.01" max="2000.00" value="<%= @scheme.total_amount %>"><br>
    </div>


  <br>
<input type="submit" value="Save">
</form>